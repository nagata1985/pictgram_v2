<div class="users-edit-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-3 col-md-6 users-edit-container">
        <h1 class="users-edit-title">ユーザー編集</h1>
        <%= form_for @user do |f|%>
          <div class="form-group">
            <%= f.label :ユーザー名, class: 'form-text' %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :メールアドレス, class: 'form-text' %>
            <%= f.text_field :email, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :パスワード, class: 'form-text' %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :パスワード確認, class: 'form-text' %>
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          </div>
          <% if logged_in? %>
            <%= f.submit "保存", class: 'btn-block' %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
