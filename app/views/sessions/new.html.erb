<div class="sessions-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-3 col-md-6 class: sessions-new-container">
        <h1 class="sessions-new-title">ログイン</h1>
        <%= form_for :session, url: login_path do |f| %>
          <div class="form-group">
            <%= f.label :メールアドレス, class: 'form-text' %>
            <%= f.text_field :email, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :パスワード, class: 'form-text' %>
            <%= f.text_field :password, class: 'form-control' %>
          </div>
          <%= f.submit "ログイン", class: 'btn-block' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
