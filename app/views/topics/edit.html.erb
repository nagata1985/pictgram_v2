<div class="topics-edit-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-3 col-md-6 topics-edit-container">
        <h1 class="topics-edit-title">投稿編集</h1>
        <%= form_for @topic do |f| %>
          <div class="form-group">
            <%= f.label :画像, class: 'form-text' %>
            <%= f.file_field :image, class: 'form-image' %>
          </div>
          <div class="form-group">
            <%= f.label :投稿内容, class: 'form-text' %>
            <%= f.text_field :description, class: 'form-control'%>
          </div>
          <% if logged_in? %>
            <%= f.submit "保存", class: 'btn-block' %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
