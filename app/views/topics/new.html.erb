<div class="topics-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-3 col-md-6 topics-new-container">
        <h1 class="topics-new-title">新規投稿</h1>
        <%= form_for @topic do |f|%>
          <div class="form-group">
            <%= f.label :画像, class: 'form-text' %>
            <%= f.file_field :image, class: 'form-image' %>
          </div>
          <div class="form-group">
            <%= f.label :投稿内容, class: 'form-text' %>
            <%= f.text_field :description, class: 'form-control' %>
          </div>
          <% if logged_in? %>
            <%= f.submit "投稿", class: 'btn-block' %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
