<div class="wrapper">
  <div class="container">
    <div class="col-md-offset-3 col-md-6 containers">
      <div class="row">
        <h1 class="title">投稿詳細</h1>
        <%= image_tag @topic.image.url, class: "topics-show-image" %>
        <div class="topics-show-name">
          <%= link_to @topic.user.name, user_path(id: @topic.user.id) %>
        </div>
        <div class="topics-show-description">
          <%= @topic.description %>
        </div>
        <% if logged_in? && current_user.id == @topic.user.id || current_user.admin_id != nil %>
          <div class="topics-show-button">
            <%= link_to "編集", edit_topic_path %>
            <span class="topics-show-delete"><%= link_to "削除", topic_path, method: :delete, data: {confirm: '本当に削除しますか？'} %></span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
